@require './code'

@import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap')
@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+JP&display=swap')

*
  margin 0
  padding 0
  box-sizing 0

body
  font-family Roboto, Arial, Helvetica, -apple-system, sans-serif
  // font-family Arial, Helvetica, -apple-system, sans-serif, 
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 16px
  color $textColor
  background-color $bgColor
  line-height 1.4em
  letter-spacing 0.5px

h1, h2, h3
  font-family 'Noto Sans JP', Arial, Helvetica, -apple-system, sans-serif
  margin-bottom 20px

.header-anchor
  display none

#header
  background-color $headerColor
  position fixed /* Make it stick/fixed */
  top: 0 /* Stay on top */
  width: 100% /* Full width */
  display: block
  /*transition: top 0.9s;  Transition effect when sliding down (and up) */
  box-shadow 0 8px 5px -5px rgba(0,0,0,0.2)
  z-index 5

.header-container
  display flex
  margin 5px auto 5px auto
  max-width 2048px

.logo
  display block
  width 150px
  margin 5px 15px

.wrapper
  margin-top 75px
  margin-left auto
  margin-right auto
  max-width 1080px
  // background-color lightblue
  display flex
  flex-direction column
  width 100%
  padding 10px

.sidebar
  /* width 175px */
  height 75px
  /* background lightgreen */
  text-align center
  padding 15px

.sidebar-item
  width 350px
  height 65px
  margin-top -8px

.main
  flex 1
  // background rgb(230, 203, 173)
  padding 20px

ol,ul
  margin 20px

@media only screen and (min-width: 801px)
  .wrapper
    margin-top 85px
    margin-left auto
    margin-right auto
    max-width 1080px
    // background-color lightblue
    display flex
    flex-direction row
    width 100%
    padding 5px

  .logo
    width 175px
    margin 5px 20px

  .sidebar
    width 200px
    height 250px
    // background lightgreen
    padding 25px 15px 15px 15px
    position sticky
    top 75px

  .sidebar-item
    width 150px
    height 150px
    margin auto
