@require './code'

*
  margin 0
  padding 0
  box-sizing 0

body
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 16px
  color $textColor
  background-color $bgColor
  line-height 1.4em

h1, h2, h3
  line-height 2em

.header-anchor
  display none

#header
  background-color $headerColor
  position fixed /* Make it stick/fixed */
  top: 0 /* Stay on top */
  width: 100% /* Full width */
  display: block
  /*transition: top 0.9s;  Transition effect when sliding down (and up) */
  box-shadow 0 5px 5px -5px rgba(0,0,0,0.2)
  z-index 5

.header-container
  display flex
  margin 5px auto 5px auto
  max-width 2048px

.logo
  display block
  width 175px
  margin 5px 20px

.wrapper
  margin-top 80px
  margin-left auto
  margin-right auto
  max-width 1250px
  /* background-color lightblue */
  display flex
  flex-direction column
  width 100%
  padding 5px

.sidebar
  /* width 175px */
  height 75px
  /* background lightgreen */
  text-align center
  padding 15px

.sidebar-item
  width 350px
  height 65px
  margin-top -8px

.main
  flex 1
  // background rgb(230, 203, 173)
  padding 0px 20px 20px 20px

ol,ul
  margin 20px

@media only screen and (min-width: 801px)
  .wrapper
    margin-top 80px
    margin-left auto
    margin-right auto
    max-width 1250px
    // background-color lightblue
    display flex
    flex-direction row
    width 100%
    padding 5px

  .sidebar
    width 200px
    height 250px
    // background lightgreen
    padding 45px 15px 15px 15px
    position sticky
    top 75px

  .sidebar-item
    width 150px
    height 150px
    margin auto

